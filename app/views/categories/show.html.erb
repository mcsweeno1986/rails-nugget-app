<%= render "shared/navbar" %>
<div class="container mt-5">
  <h2><%= @category.title %></h2>

  <ul>
  <% @category.sub_categories.each do |sub_category| %>
  <div class="card-product">
      <img src="https://media.istockphoto.com/id/1426337048/photo/inspiration-showing-sign-coming-soon-concept-meaning-something-is-going-to-happen-in-really.jpg?b=1&s=170667a&w=0&k=20&c=ksAVnSLUAtppVjL-8xP3mIaUdjzG8huoJI1UfRUsev0=" />
        <div class="card-product-infos">
          <li><%= sub_category.name %></li>
          <li><%= sub_category.location %></li>
          <li><%= sub_category.rating %></li>
          <li><%= sub_category.review %></li>
        </div>
        <div>
        <%= link_to "edit",
        edit_category_sub_category_path(@category) %>
        <%= link_to "delete",
        @sub_categories_path,
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </div>
  </div>
    <% end %>
  </ul>
    <div>
      <%= link_to "Add New", new_category_sub_category_path(@category) %>
      <%= link_to "Back", :back %>
      <%= link_to "Home", categories_path %>
    </div>
</div>
<%= render "shared/footer" %>

